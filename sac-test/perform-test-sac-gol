#!/bin/bash
echo Set classpath...
export CLASSPATH=$CLASSPATH:$DELITE/dsls/sac-staged/target/scala_2.9.x-virtualized-SNAPSHOT/classes/:$DELITE/framework/target/scala_2.9.x-virtualized-SNAPSHOT/classes:$LMS/target/scala_2.9.x-virtualized-SNAPSHOT/classes:.
echo Compile...
$SCALA_VIRTUALIZED/scalac HelloWorld-sac.scala
echo Stage...
$SCALA_VIRTUALIZED/scala -Ddelite.home.dir=$DELITE HelloWorldRunner
echo Execute...
java -cp $DELITE/runtime/target/scala_2.8.1/classes:$SCALA_VANILLA/../lib/scala-library.jar:$SCALA_VANILLA/../lib/scala-compiler.jar ppl.delite.runtime.Delite out.deg
